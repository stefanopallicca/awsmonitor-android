<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
	<PreferenceCategory 
		android:title="@string/pref_server_title"
		android:key="pref_key_storage_settings">
		<EditTextPreference
        android:key="pref_server_url"
        android:summary="@string/pref_server_url_summary"
        android:title="@string/pref_server_url_title"
        android:defaultValue="" />
    <EditTextPreference 
        android:key="pref_server_port"
        android:dependency="pref_server_url"
        android:summary="@string/pref_server_port_summary"
        android:title="@string/pref_server_port_title"
        android:inputType="number" 
        android:defaultValue="22001" />
	</PreferenceCategory>
</PreferenceScreen>
